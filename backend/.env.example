# Backend Environment Variables
# Copy this to .env for local development

# ============ Server Config ============
PORT=3001
NODE_ENV=development

# ============ MongoDB ============
# Leave empty to use in-memory database (data won't persist)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# ============ Blockchain Config ============
# Master wallet for executing payments (optional - enables real transactions)
MASTER_WALLET_PRIVATE_KEY=0x...

# RPC URLs for different chains
CRONOS_RPC_URL=https://testnet.zkevm.cronos.org
BASE_RPC_URL=https://sepolia.base.org
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# ============ AI Services ============
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=AI...

# ============ Features ============
# Enable/disable registry updates on payments
ENABLE_REGISTRY_UPDATES=true

# Virtual mode (no real blockchain transactions)
VIRTUAL_MODE=false

# ============ CORS ============
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,https://nexusflow.vercel.app
