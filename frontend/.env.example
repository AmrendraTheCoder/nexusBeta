# Frontend Environment Variables
# Copy this to .env.local for local development
# Copy to .env.production for production builds

# ============ API URLs ============
# D8N Engine API URL (workflow execution)
VITE_API_URL=http://localhost:8080

# Nexus Backend URL (balance, payments, workflows)
VITE_NEXUS_BACKEND_URL=http://localhost:3001

# Mock Provider URL (for testing)
VITE_MOCK_PROVIDER_URL=http://localhost:4000

# ============ Blockchain Config ============
# Cronos zkEVM Testnet (default)
VITE_RPC_URL=https://testnet.zkevm.cronos.org
VITE_CHAIN_ID=240

# Delegate Contract Address (for batch transactions)
VITE_DELEGATE_CONTRACT_ADDRESS=0x78E566E5B7b10c8c93d622382d6a27d960A3D76A

# ============ Optional ============
# Enable Engine Status Polling (set to 'false' to disable 404 errors)
VITE_ENABLE_STATUS_POLLING=false

# Private key for demo transactions (NEVER use real funds!)
# VITE_PRIVATE_KEY=0x...
