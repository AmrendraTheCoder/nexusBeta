# Engine Environment Variables
# Copy this to .env for local development

# ============ Server Config ============
PORT=8080
NODE_ENV=development

# ============ Blockchain Config ============
RPC_URL=https://testnet.zkevm.cronos.org
CHAIN_ID=240

# Wallet for executing transactions
PRIVATE_KEY=0x...

# Delegate contract for batch transactions
DELEGATE_CONTRACT_ADDRESS=0x78E566E5B7b10c8c93d622382d6a27d960A3D76A

# ============ AI Services ============
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=AI...

# ============ Demo Mode ============
# Auto-approve user confirmations (for hackathon demo)
DEMO_MODE=true

# Virtual mode (no real blockchain transactions)
VIRTUAL_MODE=false

# ============ Backend URL ============
# For recording payments and balances
BACKEND_URL=http://localhost:3001
